<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Rel_songsinger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/Rel_songname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_return"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/tv_songname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RollingInThe"
                android:textSize="20dp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_singername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adele"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Rel_songname"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pic_big"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Rel_songsinger"
        android:layout_marginTop="40dp"/>

    <SeekBar
        android:id="@+id/skb_Progress"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/iv_pic_big"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:max="100">
    </SeekBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skb_Progress"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_previous"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_play"
            android:layout_marginRight="35dp"/>
        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_stop"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_next1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_play"
            android:layout_marginLeft="35dp"/>

    </RelativeLayout>

</RelativeLayout>
